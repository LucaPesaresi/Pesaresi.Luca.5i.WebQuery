@using System.Data
@model System.Data.DataTable

@{
    ViewBag.Title = "WebQuery";
}

<h2>WEB QUERY</h2>
<table align="center" class="table table-bordered">
    @foreach (DataColumn colonna in @Model.Columns)
    { 
        <td align="center">
            <span style='font-weight:bold;'>@colonna.ColumnName</span>
        </td>
    }

    @foreach (DataRow riga in @Model.Rows)
    {
        <tr>
            @for (int @i = 0; @i < riga.Table.Columns.Count; @i++)
            {
                <td align="center">@riga[i]</td>             
            }
        </tr>
    }
</table>